{
    "recipe": {
        "projects": [{
                "name": "sample-database",
                "environment": "node",
                "template": "node-shaman-database",
                "path": "database"
            },
            {
                "name": "sample-server",
                "environment": "node",
                "template": "node-express-server",
                "path": "server",
                "include": [
                    "sample-database"
                ]
            }
        ],
        "transform": [{
            "targetProject": "sample-server",
            "transformation": "compose:datacontext",
            "sourceProject": "sample-database"
        }]
    }
}