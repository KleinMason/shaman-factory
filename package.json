{
  "name": "shaman-factory",
  "version": "1.0.0",
  "description": "Build high quality websites with minimal effort. Just start designing!",
  "main": "dist/index.js",
  "typings": "public_api.d.ts",
  "private": true,
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "bin": {
    "factory": "./dist/factory-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotshaman/shaman-factory.git"
  },
  "keywords": [
    "seo",
    "website",
    "cms",
    "website",
    "builder"
  ],
  "author": "Kyle Brown",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/iotshaman/shaman-factory/issues"
  },
  "homepage": "https://github.com/iotshaman/shaman-factory#readme",
  "dependencies": {
    "fs-extra": "^9.0.1",
    "npmi": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "9.0.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/sinon": "9.0.4",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "ts-auto-mock": "^2.3.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.spec.ts",
      "**/*.js",
      "**/models/*.ts",
      "**/composition/*.ts",
      "**/data/*.ts"
    ],
    "reporter": [
      "html",
      "lcov"
    ],
    "all": true
  }
}
